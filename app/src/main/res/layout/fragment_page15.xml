<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.assessment.fragmentQuestion.Page15Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:text="Assessment"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/btn_pre_ass"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="66dp"
                android:layout_height="33dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_light_blue"
                android:gravity="center"
                android:text="15 of 17"
                android:textColor="#0091EA"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView28"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView28" />

            <FrameLayout
                android:id="@+id/btn_pre_ass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_edt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_pre_ass"
                tools:layout_editor_absoluteX="16dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Do you eat any food between meals?"
                    android:textColor="@color/text_black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/btn_nextFragment"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/bg_btn_black"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup_ass15">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Continue"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroup_ass15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <RadioButton
                        android:id="@+id/radio_ass1_1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_radio_selector"
                        android:button="@color/transparent"
                        android:drawableStart="@drawable/ass_1"
                        android:drawableEnd="@drawable/custom_radio_drawable"
                        android:drawablePadding="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Always"
                        android:textColor="@drawable/custom_radio_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_ass1_2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/custom_radio_selector"
                        android:button="@color/transparent"
                        android:drawableStart="@drawable/ass_2"
                        android:drawableEnd="@drawable/custom_radio_drawable"
                        android:drawablePadding="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Frequently"
                        android:textColor="@drawable/custom_radio_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_ass1_3"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/custom_radio_selector"
                        android:button="@color/transparent"
                        android:drawableStart="@drawable/ass_3"
                        android:drawableEnd="@drawable/custom_radio_drawable"
                        android:drawablePadding="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Sometimes"
                        android:textColor="@drawable/custom_radio_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_ass1_32"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/custom_radio_selector"
                        android:button="@color/transparent"
                        android:drawableStart="@drawable/ass_3"
                        android:drawableEnd="@drawable/custom_radio_drawable"
                        android:drawablePadding="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="no"
                        android:textColor="@drawable/custom_radio_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
